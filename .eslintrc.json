{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["warn", "windows"],
        "generator-star-spacing": ["error", {"before": false, "after": true}],
        "indent": ["warn", 4]
    }
}